.ui-button {
    padding: 10px;
    margin: 10px;
    border: 2px solid #007BFF;
    background-color: #007BFF;
    color: white;
    font-size: 16px;
    cursor: pointer;
}

.ui-button:hover {
    background-color: #0056b3;
}

.ui-button:active {
    background-color: #003d80;
}

.ui-button.selected {
    background-color: #004080;
    border-color: #004080;
}